<link rel="stylesheet" href="/css/common.css">
</head>
<body>

<!-- Always shows a header, even in smaller screens. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title" id="info"></span>
      <!-- Add spacer, to align navigation to the right -->
		
      <nav class="mdl-navigation mdl-layout--small-screen-only">
      	<!--<a class="mdl-navigation__link" href="https://play.google.com/store/apps/details?id=watersupply.toprank" target="blank"><img src="/image/icon.png" height="50" border="0"></a>-->
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title">Channel</span>
    <nav class="mdl-navigation">
    	<!--<a class="mdl-navigation__link" href="https://play.google.com/store/apps/details?id=watersupply.toprank" target="blank"><img src="/image/icon.png" border="0"></a>-->
    	<a class="mdl-navigation__link" href="javascript:void(0)" onclick="javascript:switchRoom('CH1'); return false;">Channel1</a>
	    <a class="mdl-navigation__link" href="javascript:void(0)" onclick="javascript:switchRoom('CH2'); return false;">Channel2</a>
	    <a class="mdl-navigation__link" href="javascript:void(0)" onclick="javascript:switchRoom('CH3'); return false;">Channel3</a>
    </nav>
  </div>
  <main class="mdl-layout__content">
    <div class="page-content">
    <!-- Your content goes here -->
    
    	<div id="conversation" style="width:100%"></div>
    	
    </div>
  </main>
  
  <footer>
  <div class="mdl-textfield mdl-js-textfield" style="width:100%">
  <input class="mdl-textfield__input" type="text" id="data">
  <label class="mdl-textfield__label" for="data">Input Mesaage...</label>
  </div>
  <button id="datasend">Send</button>
  </footer>
</div>


<input type="hidden" id="uid" value="<%=uid%>">
<input type="hidden" id="uname" value="<%=uname%>">
<input type="hidden" id="ch" value="<%=ch%>">


<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/init.js"></script>
</body>
</html>
