  <div class="mdl-textfield mdl-js-textfield" style="width:50%">
  <input class="mdl-textfield__input" type="text" id="nick">
  <label class="mdl-textfield__label" for="nick">What's your name?</label>
  </div>

  <button id="go_btn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Go</button>

<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script>
$(function(){   
		$('#go_btn').click( function() {
		
				var uid = 'f' + (Math.random() * (1 << 30)).toString(16).replace('.', '');
				var nick = $('#nick').val();
				if(nick){
					location.href="/chat/" + uid + "/" + $('#nick').val();
				}else{
					alert('Input your name');
				}
		});
});
</script>
</body>
</html>
